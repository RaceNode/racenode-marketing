---
const currentYear = new Date().getFullYear();
const email = "contact@racenode.com";
---

<footer class="bg-gray-900 border-t border-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="flex flex-col md:flex-row items-center justify-between gap-4">
      <!-- Copyright -->
      <div class="text-gray-400 text-sm">
        &copy; {currentYear} RaceNode. All rights reserved.
      </div>

      <!-- Legal Links -->
      <div class="flex items-center gap-4 text-sm">
        <a
          href="/terms"
          class="text-gray-400 hover:text-green-500 transition-colors"
        >
          Terms & Conditions
        </a>
        <span class="text-gray-700">|</span>
        <a
          href="/privacy"
          class="text-gray-400 hover:text-green-500 transition-colors"
        >
          Privacy Policy
        </a>
      </div>

      <!-- Contact Email -->
      <a
        href={`mailto:${email}?subject=Contact from RaceNode website`}
        class="flex items-center gap-2 text-gray-400 hover:text-green-500 transition-colors text-sm group"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 group-hover:scale-110 transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect width="20" height="16" x="2" y="4" rx="2"/>
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
        </svg>
        <span>{email}</span>
      </a>
    </div>
  </div>
</footer>
