---
import { Image } from 'astro:assets';
import screenshotOverview from '../../assets/screenshots/logistics-overview.png';

const appUrl = "https://app.racenode.com";
---

<section class="px-4 sm:px-6 lg:px-8 py-20 md:py-28">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12 md:mb-16">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
        Event logistics, centralized.
      </h1>
      <p class="text-xl md:text-2xl text-gray-400 max-w-3xl mx-auto mb-8">
        Coordinate accommodation, travel, and vehicles for 20+ people across a full racing season. One workspace for your logistics team.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a
          href={`${appUrl}/signup`}
          class="bg-purple-600 hover:bg-purple-700 text-white px-8 py-3 rounded-lg text-lg font-medium transition-colors"
        >
          Sign Up
        </a>
        <a
          href="/pricing"
          class="text-gray-300 hover:text-white transition-colors flex items-center gap-2"
        >
          View Pricing
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </a>
      </div>
    </div>

    <!-- Screenshot -->
    <div class="max-w-5xl mx-auto rounded-xl overflow-hidden shadow-2xl shadow-purple-500/10">
      <Image
        src={screenshotOverview}
        alt="RaceNode Logistics Overview - Dashboard showing event preparation status"
        class="w-full h-auto"
        quality={85}
      />
    </div>
  </div>
</section>
