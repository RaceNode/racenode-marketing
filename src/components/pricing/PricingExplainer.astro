<section class="px-4 sm:px-6 lg:px-8 py-12 md:py-16">
  <div class="max-w-5xl mx-auto">
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Per module, per team -->
      <div class="text-center md:text-left">
        <div class="w-12 h-12 bg-gray-800 rounded-xl flex items-center justify-center mx-auto md:mx-0 mb-4 border border-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
            <circle cx="9" cy="7" r="4"/>
            <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
            <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-white mb-2">Per module, per team</h3>
        <p class="text-gray-400 text-sm">
          No per-seat pricing. A team of 15 or 40 people pays the same price for each module.
        </p>
      </div>

      <!-- Modular -->
      <div class="text-center md:text-left">
        <div class="w-12 h-12 bg-gray-800 rounded-xl flex items-center justify-center mx-auto md:mx-0 mb-4 border border-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="7" height="7" x="3" y="3" rx="1"/>
            <rect width="7" height="7" x="14" y="3" rx="1"/>
            <rect width="7" height="7" x="14" y="14" rx="1"/>
            <rect width="7" height="7" x="3" y="14" rx="1"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-white mb-2">Modular</h3>
        <p class="text-gray-400 text-sm">
          Start with what you need. Add modules anytime as your requirements evolve.
        </p>
      </div>

      <!-- Personal is free -->
      <div class="text-center md:text-left">
        <div class="w-12 h-12 bg-gray-800 rounded-xl flex items-center justify-center mx-auto md:mx-0 mb-4 border border-gray-700">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-white" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect width="14" height="20" x="5" y="2" rx="2" ry="2"/>
            <path d="M12 18h.01"/>
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-white mb-2">Personal is free</h3>
        <p class="text-gray-400 text-sm">
          Every team member accesses their assignments, travel details, and schedules via the mobile app at no extra cost.
        </p>
      </div>
    </div>
  </div>
</section>
