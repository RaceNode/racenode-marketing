  <div class="max-w-6xl mx-auto">
    <div class="grid md:grid-cols-3 gap-6">

      <!-- Management Module -->
      <div class="bg-gray-900 border border-orange-500/30 rounded-xl p-6 md:p-8 flex flex-col">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 bg-orange-900/20 rounded-lg flex items-center justify-center border border-orange-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-orange-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="8" height="4" x="8" y="2" rx="1" ry="1"/>
              <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2"/>
              <path d="m9 14 2 2 4-4"/>
            </svg>
          </div>
          <h3 class="text-white font-semibold text-lg">Management</h3>
        </div>

        <div class="mb-6">
          <span class="text-gray-500 line-through text-lg">€149.99/mo</span>
          <div class="flex items-baseline gap-2">
            <span class="text-4xl font-bold text-white">€99.99</span>
            <span class="text-gray-400">/mo</span>
          </div>
          <span class="text-orange-400 text-sm">Early access pricing</span>
        </div>

        <ul class="space-y-3 mb-8 flex-grow">
          <li class="flex items-start gap-2 text-gray-300 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-orange-400 mt-0.5 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 6 9 17l-5-5"/>
            </svg>
            Event staff assignment & roles
          </li>
          <li class="flex items-start gap-2 text-gray-300 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-orange-400 mt-0.5 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 6 9 17l-5-5"/>
            </svg>
            Racecar assignment per event
          </li>
          <li class="flex items-start gap-2 text-gray-300 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-orange-400 mt-0.5 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 6 9 17l-5-5"/>
            </svg>
            Team composition & crew structure
          </li>
          <li class="flex items-start gap-2 text-gray-300 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-orange-400 mt-0.5 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 6 9 17l-5-5"/>
            </svg>
            Meal planning per event day
          </li>
          <li class="flex items-start gap-2 text-gray-400 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-gray-600 mt-0.5 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <path d="M12 6v6l4 2"/>
            </svg>
            <span class="italic">Coming soon: Event timetable</span>
          </li>
        </ul>

        <!-- Included modules -->
        <div class="mb-6 pt-4 border-t border-gray-800">
          <p class="text-gray-500 text-xs uppercase mb-3">Includes access to</p>
          <div class="flex flex-wrap gap-2">
            <span class="px-2 py-1 bg-cyan-900/20 text-cyan-400 rounded text-xs border border-cyan-500/20">Personal</span>
            <span class="px-2 py-1 bg-green-900/20 text-green-400 rounded text-xs border border-green-500/20">Staff</span>
            <span class="px-2 py-1 bg-red-900/20 text-red-400 rounded text-xs border border-red-500/20">Racecars</span>
            <span class="px-2 py-1 bg-blue-900/20 text-blue-400 rounded text-xs border border-blue-500/20">Events</span>
          </div>
        </div>

        <a
          href={`${appUrl}/signup`}
          class="bg-orange-600 hover:bg-orange-700 text-white px-6 py-3 rounded-lg font-medium transition-colors text-center"
