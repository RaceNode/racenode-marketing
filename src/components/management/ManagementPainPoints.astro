---
const painPoints = [
  {
    title: "Staff assignments rebuilt each event",
    description: "Staff assignments that change from one event to the next, tracked separately each time.",
    icon: "users"
  },
  {
    title: "Team compositions done manually",
    description: "Team compositions and car crew roles rebuilt manually for every race weekend.",
    icon: "refresh"
  },
  {
    title: "No unified view of assignments",
    description: "No single view of who is assigned where, in which role, on which car.",
    icon: "layout"
  },
  {
    title: "Meals handled separately",
    description: "Meal planning handled outside of the event workflow, disconnected from the staff list.",
    icon: "utensils"
  }
];

const icons: Record<string, string> = {
  users: `<path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/>`,
  refresh: `<path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"/><path d="M21 3v5h-5"/><path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"/><path d="M3 21v-5h5"/>`,
  layout: `<rect width="18" height="18" x="3" y="3" rx="2"/><path d="M3 9h18"/><path d="M9 21V9"/>`,
  utensils: `<path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/><path d="M7 2v20"/><path d="M21 15V2a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3zm0 0v7"/>`
};
---

<section class="px-4 sm:px-6 lg:px-8 py-20 md:py-24 bg-gray-900/30">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12 md:mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Each event has its own crew, cars, and structure.
      </h2>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 lg:gap-8">
      {painPoints.map((point) => (
        <div class="bg-gray-900 border border-gray-800 rounded-xl p-6 hover:border-gray-700 transition-colors">
          <div class="w-12 h-12 bg-gray-800 rounded-lg flex items-center justify-center mb-4">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="w-6 h-6 text-gray-400"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              set:html={icons[point.icon]}
            />
          </div>
          <h3 class="text-lg font-semibold text-white mb-2">{point.title}</h3>
          <p class="text-gray-400">{point.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>
