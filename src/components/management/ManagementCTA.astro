---
const appUrl = "https://app.racenode.com";
---

<section class="px-4 sm:px-6 lg:px-8 py-20 md:py-24">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white">
        Structure your next event.
      </h2>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
      <!-- Pricing card -->
      <div class="bg-gray-900 border border-orange-500/30 rounded-xl p-8">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 bg-orange-900/20 rounded-lg flex items-center justify-center border border-orange-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-orange-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/>
              <circle cx="9" cy="7" r="4"/>
              <path d="M22 21v-2a4 4 0 0 0-3-3.87"/>
              <path d="M16 3.13a4 4 0 0 1 0 7.75"/>
            </svg>
          </div>
          <h3 class="text-white font-semibold text-lg">Management Module</h3>
        </div>

        <div class="mb-4">
          <span class="text-gray-500 line-through text-lg">€149.99/mo</span>
          <div class="flex items-baseline gap-2">
            <span class="text-4xl font-bold text-white">€99.99</span>
            <span class="text-gray-400">/mo</span>
          </div>
        </div>

        <div class="space-y-3 mb-6">
          <div class="flex items-center gap-2 text-green-400 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 6 9 17l-5-5"/>
            </svg>
            <span>Early adopter pricing locked for life</span>
          </div>
          <div class="flex items-center gap-2 text-gray-400 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 6 9 17l-5-5"/>
            </svg>
            <span>Includes Personal module for all team members</span>
          </div>
          <div class="flex items-center gap-2 text-gray-400 text-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M20 6 9 17l-5-5"/>
            </svg>
            <span>Foundation modules included: Staff, Fleet, Event</span>
          </div>
        </div>

        <a
          href="/pricing"
          class="text-orange-400 hover:text-orange-300 transition-colors flex items-center gap-2 text-sm"
        >
          See full pricing
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M5 12h14"/>
            <path d="m12 5 7 7-7 7"/>
          </svg>
        </a>
      </div>

      <!-- CTA card -->
      <div class="bg-gray-900 border border-gray-800 rounded-xl p-8 flex flex-col justify-center">
        <h3 class="text-2xl font-bold text-white mb-3">
          Start free trial
        </h3>
        <p class="text-gray-400 mb-6">
          No credit card required. Set up your team in minutes.
        </p>
        <a
          href={`${appUrl}/signup`}
          class="bg-orange-600 hover:bg-orange-700 text-white px-8 py-3 rounded-lg text-lg font-medium transition-colors text-center"
        >
          Start free trial
        </a>
      </div>
    </div>
  </div>
</section>
