<section class="px-4 sm:px-6 lg:px-8 py-20 md:py-24">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Assign once, everyone knows.
      </h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto">
        When you assign a role, a car, a flight, or a meal â€” your team member sees it instantly in their Personal app. No briefing email, no message forwarding, no information lost in transit.
      </p>
    </div>

    <!-- Sync diagram -->
    <div class="max-w-4xl mx-auto">
      <div class="grid md:grid-cols-3 gap-6 items-center">
        <!-- Manager side -->
        <div class="bg-gray-900 border border-gray-800 rounded-xl p-6 text-center">
          <div class="w-16 h-16 bg-green-900/20 rounded-xl flex items-center justify-center mx-auto mb-4 border border-green-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-green-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="20" height="14" x="2" y="3" rx="2"/>
              <line x1="8" x2="16" y1="21" y2="21"/>
              <line x1="12" x2="12" y1="17" y2="21"/>
            </svg>
          </div>
          <h3 class="text-white font-semibold mb-2">Team Manager</h3>
          <p class="text-gray-400 text-sm">Assigns roles, logistics, and meals in RaceNode</p>
        </div>

        <!-- Arrow / sync indicator -->
        <div class="flex flex-col items-center justify-center py-4 md:py-0">
          <div class="hidden md:flex items-center gap-2 text-green-400">
            <div class="w-16 h-0.5 bg-gradient-to-r from-green-600 to-green-400"></div>
            <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M5 12h14"/>
              <path d="m12 5 7 7-7 7"/>
            </svg>
            <div class="w-16 h-0.5 bg-gradient-to-r from-green-400 to-green-600"></div>
          </div>
          <div class="md:hidden w-0.5 h-12 bg-gradient-to-b from-green-600 via-green-400 to-green-600"></div>
          <div class="bg-green-900/20 border border-green-500/30 rounded-full px-4 py-2 mt-2 md:mt-4">
            <span class="text-green-300 text-sm font-medium">Instant sync</span>
          </div>
        </div>

        <!-- Staff side -->
        <div class="bg-gray-900 border border-gray-800 rounded-xl p-6 text-center">
          <div class="w-16 h-16 bg-cyan-900/20 rounded-xl flex items-center justify-center mx-auto mb-4 border border-cyan-500/30">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-cyan-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="14" height="20" x="5" y="2" rx="2" ry="2"/>
              <path d="M12 18h.01"/>
            </svg>
          </div>
          <h3 class="text-white font-semibold mb-2">Staff Member</h3>
          <p class="text-gray-400 text-sm">Sees their assignments in the Personal app</p>
        </div>
      </div>

      <!-- Example cards -->
      <div class="mt-12 grid md:grid-cols-4 gap-4">
        <div class="bg-gray-900 border border-gray-800 rounded-xl p-4">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-8 h-8 bg-orange-900/20 rounded-lg flex items-center justify-center border border-orange-500/30">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-orange-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="18" cy="15" r="3"/>
                <circle cx="9" cy="7" r="4"/>
                <path d="M10 15H6a4 4 0 0 0-4 4v2"/>
              </svg>
            </div>
            <span class="text-white text-sm font-medium">Role</span>
          </div>
          <p class="text-gray-400 text-xs">Race Engineer on #42</p>
        </div>

        <div class="bg-gray-900 border border-gray-800 rounded-xl p-4">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-8 h-8 bg-purple-900/20 rounded-lg flex items-center justify-center border border-purple-500/30">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M17.8 19.2 16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z"/>
              </svg>
            </div>
            <span class="text-white text-sm font-medium">Flight</span>
          </div>
          <p class="text-gray-400 text-xs">LHR to MXP, Sep 12</p>
        </div>

        <div class="bg-gray-900 border border-gray-800 rounded-xl p-4">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-8 h-8 bg-purple-900/20 rounded-lg flex items-center justify-center border border-purple-500/30">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-purple-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M2 4v16"/>
                <path d="M2 8h18a2 2 0 0 1 2 2v10"/>
                <path d="M2 17h20"/>
                <path d="M6 8v9"/>
              </svg>
            </div>
            <span class="text-white text-sm font-medium">Hotel</span>
          </div>
          <p class="text-gray-400 text-xs">Grand Hotel, Room 204</p>
        </div>

        <div class="bg-gray-900 border border-gray-800 rounded-xl p-4">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-8 h-8 bg-orange-900/20 rounded-lg flex items-center justify-center border border-orange-500/30">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 text-orange-400" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M3 2v7c0 1.1.9 2 2 2h4a2 2 0 0 0 2-2V2"/>
                <path d="M7 2v20"/>
                <path d="M21 15V2a5 5 0 0 0-5 5v6c0 1.1.9 2 2 2h3zm0 0v7"/>
              </svg>
            </div>
            <span class="text-white text-sm font-medium">Meals</span>
          </div>
          <p class="text-gray-400 text-xs">Paddock, 12:00-13:00</p>
        </div>
      </div>

      <!-- Note about Personal module -->
      <div class="mt-8 text-center">
        <p class="text-green-400 text-sm font-medium">
          The Personal module is included free with any subscription.
        </p>
      </div>
    </div>
  </div>
</section>
