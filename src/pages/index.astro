---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import LandingHero from '../components/landing/LandingHero.astro';
import LandingProblem from '../components/landing/LandingProblem.astro';
import LandingSolution from '../components/landing/LandingSolution.astro';
import LandingModules from '../components/landing/LandingModules.astro';
import LandingSync from '../components/landing/LandingSync.astro';
import LandingRoadmap from '../components/landing/LandingRoadmap.astro';
import LandingCredibility from '../components/landing/LandingCredibility.astro';
import LandingCTA from '../components/landing/LandingCTA.astro';
---

<BaseLayout title="RaceNode - Your Racing Team's Operations, Finally in One Place">
  <div class="min-h-screen bg-gray-950 flex flex-col">
    <Header />
    <main class="flex-1">
      <LandingHero />
      <LandingProblem />
      <LandingSolution />
      <LandingModules />
      <LandingSync />
      <LandingRoadmap />
      <LandingCredibility />
      <LandingCTA />
    </main>
    <Footer />
  </div>
</BaseLayout>
